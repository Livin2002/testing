<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }
  body {
    font-family: sans-serif;
  }
  .slider {
    width: 100%;
    height: 300px;
    position: relative;
    overflow: hidden;
  }
  .slider__wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    transition: transform 0.3s ease-in-out;
  }
  .slider__item {
    width: 100%;
    height: 100%;
    flex-shrink: 0;
    margin-right: 20px;
    background-color: #fff;
    border-radius: 10px;
    box-shadow: 0px 10px 15px rgba(0, 0, 0, 0.1);
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24px;
    font-weight: bold;
    color: #333;
  }
  .slider__item:last-child {
    margin-right: 0;
  }
  .slider__controls {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
  }
  .slider__control {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: #ccc;
    margin-right: 10px;
    cursor: pointer;
    transition: background-color 0.3s ease-in-out;
  }
  .slider__control:last-child {
    margin-right: 0;
  }
  .slider__control--active {
    background-color: #333;
  }
</style>

<div class="slider">
  <div class="slider__wrapper">
    <div class="slider__item">Slide 1</div>
    <div class="slider__item">Slide 2</div>
    <div class="slider__item">Slide 3</div>
    <div class="slider__item">Slide 4</div>
    <div class="slider__item">Slide 5</div>
  </div>
  <div class="slider__controls">
    <div class="slider__control slider__control--active"></div>
    <div class="slider__control"></div>
    <div class="slider__control"></div>
    <div class="slider__control"></div>
    <div class="slider__control"></div>
  </div>
</div>
<script is:inline>
  const slider = document.querySelector(".slider");
  const wrapper = slider.querySelector(".slider__wrapper");
  const items = slider.querySelectorAll(".slider__item");
  const controls = slider.querySelectorAll(".slider__control");

  let activeIndex = 0;
  let itemWidth =
    items[0].offsetWidth + parseInt(getComputedStyle(items[0]).marginRight);

  wrapper.style.width = `${itemWidth * items.length}px`;

  controls.forEach((control, index) => {
    control.addEventListener("click", () => {
      activeIndex = index;
      setActiveControl();
      setWrapperPosition();
    });
  });

  function setActiveControl() {
    controls.forEach((control, index) => {
      if (index === activeIndex) {
        control.classList.add("slider__control--active");
      } else {
        control.classList.remove("slider__control--active");
      }
    });
  }

  function setWrapperPosition() {
    wrapper.style.transform = `translateX(-${activeIndex * itemWidth}px)`;
  }
</script>
