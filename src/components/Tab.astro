<style>
  .container {
    background-color: #f2f4f4;
    padding: 5rem 0;
  }
  .tabs-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .heding-container {
    display: flex;
    gap: 1rem;
    align-items: center;
    padding: 1rem;
    margin-bottom: 2rem;
  }
  .right-img {
    flex: 1;
    padding: 1rem;
  }
  .left-text p {
    padding: 0 2rem;
    font-size: 1.5rem;
  }
  .fiveinone-img {
    height: auto;
    width: 300px;
  }
  .tabscreen {
    margin-top: 3rem;
    /* border-radius: 10px; */
  }
  .heading {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .tabs {
    display: flex;
    justify-content: center;
    gap: 1rem;
    transition: transform 0.3s ease-in-out;
    padding: 0.5rem;
  }
  .tab-links {
    border-bottom: 1px solid #d2d5d9;
  }

  .tab:hover {
    scale: 1.05;
    transition:
      opacity 0.2s cubic-bezier(0.075, 0.82, 0.165, 1),
      scale 0.2s cubic-bezier(0.075, 0.82, 0.165, 1);
  }

  .tab {
    margin-right: 20px;
    padding: 10px 20px;
    color: #202d41;
    font-size: 20px;
    font-weight: 700;
    cursor: pointer;
    position: relative;
    transition: transform 0.3s ease-in-out;
  }

  .tab.active {
    transform: scale(1.1);
  }
  .tab::after {
    content: "";
    position: absolute;
    left: 0;
    bottom: -6px;
    width: 100%;
    height: 2px;
    background-color: #00715d;
    transform-origin: left;
    transform: scaleX(0);
    transition: transform 0.3s ease-in-out;
  }
  .tab.active::after {
    transform: scaleX(1);
  }
  .mob-container {
    display: none;
  }

  @media (max-width: 900px) {
    .tabs {
      gap: 0.5rem;
      flex-direction: column;
      align-items: center;
    }
    .container {
      background-color: #f2f4f4;
      padding: 1rem 0;
    }
    .tab::after {
      display: none;
    }
    .tabs-container {
      display: none;
    }
    .mob-container {
      display: flex;
      flex-direction: column;
    }
    .tab-items {
      display: flex;
      align-items: center;
      justify-content: center;
      flex-direction: column;
    }
    .heding-container {
      display: flex;
      flex-direction: column;
      padding: 0.5rem;
      width: 100%;
      gap: 1rem;
    }
    .right-img {
      flex: 1;
      padding: 0;
    }
    .left-text p {
      padding: 0;
      font-size: 1.3rem;
      text-align: center;
    }
  }
  @media (max-width: 1100px) {
    .tabs {
      gap: 1rem;
    }
  }
</style>

<script is:inline>
  function changeTab(event, tabId) {
    let tabcontent = document.getElementsByClassName("tab-content");
    for (let i = 0; i < tabcontent.length; i++) {
      tabcontent[i].style.display = "none";
    }

    let tablinks = document.getElementsByClassName("tab");
    for (let i = 0; i < tablinks.length; i++) {
      tablinks[i].className = tablinks[i].className.replace(" active", "");
    }

    document.getElementById(tabId).style.display = "block";
    event.currentTarget.className += " active";
  }
</script>
